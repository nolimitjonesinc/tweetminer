{
  "manifest_version": 3,
  "name": "TweetMiner",
  "version": "1.1.0",
  "description": "Analyze content from Twitter, Reddit, LinkedIn, HN, YouTube with one click",
  "permissions": ["activeTab", "contextMenus"],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://www.reddit.com/*",
    "https://old.reddit.com/*",
    "https://www.linkedin.com/*",
    "https://news.ycombinator.com/*",
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*",
        "https://www.reddit.com/*",
        "https://old.reddit.com/*",
        "https://www.linkedin.com/*",
        "https://news.ycombinator.com/*",
        "https://www.youtube.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TweetMiner"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
